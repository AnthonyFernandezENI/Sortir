{% extends 'base.html.twig' %}

{% block title %}Sortir.com - Modifier mon profil{% endblock %}

{% block body %}
    <div class="grid-container">
        <div class="grid-x grid-margin-x">
            <h3 class="cell small-4 large-offset-4 title-centered">Modifier mon profil</h3>
        </div>
{#        <form name="participant" method="post">#}
            {{ form_start(form) }}
            {{ form_errors(form) }}
            {{ form_row( form.pseudo, { 'label': 'Pseudo :' } ) }}
            {{ form_row( form.prenom, { 'label': 'Prénom :' } ) }}
            {{ form_row( form.nom, { 'label': 'Nom :' } ) }}
            {{ form_row( form.telephone, { 'label': 'Téléphone :' } ) }}
            {{ form_row( form.mail, { 'label': 'E-Mail :' } ) }}
            {{ form_errors( form.password ) }}
            {{ form_row( form.password.first) }}
            {{ form_row( form.password.second) }}
            {{ form_row(form.site, { 'label': 'Ville de rattachement :' } ) }}

        <div class="cell small-12">
            <div class="grid-x grid-margin-x">
                <div class="cell small-6">
                    <button class="button">{{ button_label|default('Enregistrer') }}</button>
                </div>
                {{ form_end(form) }}
                <div class="cell small-6">
                    <a class="button" href="{{ path('sortie_index') }}">Annuler</a>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
